<div class="container">
  <div style="max-width: 600px; margin: 40px auto; padding: 30px; box-shadow: 0 0 10px rgba(0,0,0,0.1); border-radius: 8px;">
    <h1 style="color: #333; margin-bottom: 30px; text-align: center;">写真アップロード</h1>

    <%= form_with(model: @image, local: true) do |form| %>
      <%= render 'shared/flash_messages' %>

      <div class="form-group">
        <%= form.label :title, "タイトル", style: "display: block; margin-bottom: 8px; color: #555;" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :image, "画像を選択", style: "display: block; margin-bottom: 8px; color: #555;" %>
        <%= form.file_field :image, class: "form-control", style: "padding: 8px;" %>
      </div>

      <div class="form-group" style="text-align: center;">
        <%= form.submit "アップロード", class: "btn btn-primary", style: "width: 100%;" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 20px;">
      <%= link_to "キャンセル", user_images_path, style: "color: #6c757d; text-decoration: none;" %>
    </div>
  </div>
</div>
